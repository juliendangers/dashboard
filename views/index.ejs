<% layout('layout') -%>

<h1 class="mainTitle">Dashboard R&D</h1>
<div ng-app="dashboardApp">
	<div ng-controller="MainCtrl">
		<div class="row">
			<div class="six columns">
				<div class="block">
					<div class="hd">Sprint burndown charts</div>
					<div class="bd">
						<c3-simple id="burndown" config="burndown"></c3-simple>
					</div>
				</div>
			</div>
			<div class="six columns">
				<div class="block">
					<div class="hd">Issues charts</div>
					<div class="bd">
						<c3-simple id="chart" config="chart"></c3-simple>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="four columns">
				<div class="block bugsBlock">
					<div class="hd"> Open Bugs</div>
					<div class="bd">
						<div class="wrapper">
							<i class="fa fa-bug fa-5x"></i>
							<p ng-cloak>{{ bugs.number }}</p>
						</div>
						<p class="date" ng-cloak>
							<span>Last updated:
							{{ bugs.date  | amDateFormat:'dddd, MMMM Do YYYY'}}</span>
						</p>
					</div>
				</div>
			</div>
			<div class="four columns">
				<div class="block bugsWeek">
					<div class="hd">Bugs this week</div>
					<div class="bd wrapper">
						<div class="left" ng-cloak>
							<p><span>{{ bugsWeekly.done || "–" }}</span></p>
							<p>Done</p>
						</div>
						<div class="right" ng-cloak>
							<p><span>{{ bugsWeekly.notDone || "–" }}</span></p>
							<p>New</p>
						</div>
					</div>
				</div>
			</div>
			<div class="four columns">
				<div class="block">
					<div class="hd">Projects</div>
					<div class="bd">
						<ul class="projectList" ng-cloak>
							<li ng-repeat="project in projects | limitTo:5">
								{{ project.name }} {{ project.duedate }} <span>{{ project.achievement }}%</span>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



